  <groupId>ru.mail</groupId>
  <artifactId>CACertificateKeyStore</artifactId>
  <version>1.0</version>

  <name>Mail.ru Tool: CACertificateKeyStore</name>
  <description>This is the tool for generating self-signed CA certificate and save it to the p12 keystore.</description>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.source>1.7</maven.compiler.source>
    <maven.compiler.target>1.7</maven.compiler.target>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.bouncycastle</groupId>
      <artifactId>bcpkix-jdk15on</artifactId>
      <version>1.64</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
  </dependencies>


